<h1>Eat-the-Burger</h1>

<img src="assets/img/son-burger.jpg" width="300px" height="300px" />
<!-- Pass in data from server.js -->
<br>
<br>
<div class="left">

    <h2>Burger Menu:</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger eaten=true}}
        {{/unless}}
        {{/each}}
    </ul>

</div>

<div class="right">

    <h2> Burger's Devoured:</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger eaten=false}}
        {{/if}}
        {{/each}}
    </ul>

</div>


<div class="bottom">

    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <div class="form-group">
            <label for="devoured"><b>Has this burger already been consumed?</b></label>
            <br>
            <br>
            <input type="radio" name="devoured" value="1" checked> Devoured it!<br>
            <input type="radio" name="devoured" value="0"> Not yet!
        </div>

        <button type="submit" class="submit">Add burger</button>
    </form>

</div>