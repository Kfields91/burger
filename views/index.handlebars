{{!-- check for proper button html --}}

<h1>Eat-the-Burger</h1>

<h2>Burger's Not Eaten</h2>>

<!-- Pass in data from server.js -->
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger eaten=true}}
    {{!-- <li>
        <p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">burger:</span> {{this.burger_name}}</p>
    </li> --}}
    {{/unless}}
    {{/each}}
</ul>

<h2> Burger's Eaten </h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger eaten=false}}
    {{!-- <li>
        <p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">burger:</span> {{this.burger_name}}</p>
    </li> --}}
    {{/if}}
    {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add burger</button>
</form>